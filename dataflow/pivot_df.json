{
	"name": "pivot_df",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "pivot_unpivot",
						"type": "DatasetReference"
					},
					"name": "source"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "pivot1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          ID as integer,",
				"          ITEM as string,",
				"          QTY as integer,",
				"          YEAR as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source",
				"source pivot(groupBy(YEAR),",
				"     pivotBy(ITEM),",
				"     QTY = ERROR_FUNCTION(''),",
				"     columnNaming: '$N-$V',",
				"     lateral: true) ~> pivot1"
			]
		}
	}
}