{
	"name": "join_df",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "impiger_dev_db",
						"type": "LinkedServiceReference"
					},
					"name": "city"
				},
				{
					"dataset": {
						"referenceName": "cust_ds",
						"type": "DatasetReference"
					},
					"name": "customer"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "join"
				},
				{
					"name": "select1"
				}
			],
			"scriptLines": [
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'table',",
				"     store: 'sqlserver',",
				"     schemaName: '',",
				"     tableName: '',",
				"     isolationLevel: 'READ_UNCOMMITTED') ~> city",
				"source(output(",
				"          city_id as string,",
				"          cust_name as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> customer",
				"city, customer join(city@city_id == customer@city_id,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join",
				"join select(mapColumn(",
				"          cust_name,",
				"          city_name,",
				"          city_id",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1"
			]
		}
	}
}