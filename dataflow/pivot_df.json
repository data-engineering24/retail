{
	"name": "pivot_df",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "pivot_unpivot",
						"type": "DatasetReference"
					},
					"name": "source"
				},
				{
					"linkedService": {
						"referenceName": "impiger_dev_db",
						"type": "LinkedServiceReference"
					},
					"name": "source1"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "pivot1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          ID as integer,",
				"          ITEM as string,",
				"          QTY as integer,",
				"          YEAR as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'table',",
				"     store: 'sqlserver',",
				"     schemaName: '',",
				"     tableName: '',",
				"     isolationLevel: 'READ_UNCOMMITTED') ~> source1",
				"source pivot(groupBy(YEAR),",
				"     pivotBy(ITEM),",
				"     QTY = sum(QTY),",
				"     columnNaming: '$N-$V',",
				"     lateral: true) ~> pivot1"
			]
		}
	}
}