{
	"name": "dataflow2",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "pivot_unpivot",
						"type": "DatasetReference"
					},
					"name": "Source"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "Pivot"
				}
			],
			"scriptLines": [
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> Source",
				"Source pivot(columnNaming: '$N$V',",
				"     lateral: true) ~> Pivot"
			]
		}
	}
}