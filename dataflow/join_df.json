{
	"name": "join_df",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "city_ds",
						"type": "DatasetReference"
					},
					"name": "city"
				},
				{
					"dataset": {
						"referenceName": "cust_ds",
						"type": "DatasetReference"
					},
					"name": "customer"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "join"
				}
			],
			"scriptLines": [
				"source(output(",
				"          city_id as string,",
				"          city_name as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> city",
				"source(output(",
				"          city_id as string,",
				"          cust_name as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> customer",
				"city, customer join(city@city_id == customer@city_id,",
				"     joinType:'left',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join"
			]
		}
	}
}